{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Descryption</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.name }}</a></td>
                <td>{{ task.descryption }}</td>
                <td>{% if task.startDate %}{{ task.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if task.endDate %}{{ task.endDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ task.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_show', { 'id': task.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}">Create a new task</a>
        </li>
    </ul>
{% endblock %}
